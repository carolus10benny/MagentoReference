/**
 * Set environment cookie template
 *
 * @see Fastly_CDN_Block_Cookie_Environment
 */
?>
<script type="text/javascript">
    //<![CDATA[
    Mage.Cookies.set(
        '<?php echo $this->getCookieName() ?>',
    <?php if ($_envHash = $this->getEnvironmentHash()): ?>
        '<?php echo $_envHash ?>',
        new Date(new Date().getTime() + <?php echo $this->getCookieLifetime() ?>)
    <?php else: ?>
    '',
        new Date(1970, 1, 1, 0, 0, 0)
    <?php endif;?>
    );
    //]]>
</script>